[Service]
{% for key, value in kafka.broker.environment.items() %}
Environment="{{key}}={{value}}"
{% endfor %}
{% if security_mode == 'kerberos' %}
Environment="KAFKA_OPTS=-Djava.security.auth.login.config={{kafka.broker.sasl_jaas_cfg_file}}"
{% endif %}
{% if security_mode == 'kerberos_ssl' %}
Environment="KAFKA_OPTS=-Djava.security.auth.login.config={{kafka.broker.sasl_jaas_cfg_file}}"
{% endif %}
